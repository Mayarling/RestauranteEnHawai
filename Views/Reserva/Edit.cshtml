@model RestauranteEnHawai.Models.Reserva

@{
    ViewData["Title"] = "Editar reserva";
}

<h1>Edit</h1>

<h4>Reserva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroDeReserva"class="control-label"></label>
                <input name="numeroReserva" asp-for="NumeroDeReserva" class="form-control" readonly/>
                <span asp-validation-for="NumeroDeReserva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaHoraReserva" class="control-label"></label>
                <input asp-for="FechaHoraReserva" class="form-control" type="datetime-local"/>
                <span asp-validation-for="FechaHoraReserva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NombreCliente" class="control-label"></label>
                <input asp-for="NombreCliente" class="form-control" />
                <span asp-validation-for="NombreCliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadPersonas" class="control-label"></label>
                <input asp-for="CantidadPersonas" class="form-control" />
                <span asp-validation-for="CantidadPersonas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista de reservas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
